---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const events = await getCollection("events");
  return events.map((event) => ({
    params: { slug: event.id },
    props: { event },
  }));
}

const { event } = Astro.props;
const { title, description, date, time, location, organizerLink, body } =
  event.data;

const formattedDate = date.toLocaleDateString("en-US", {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
});

const base = import.meta.env.BASE_URL;
---

<Layout title={title} description={description}>
  <article class="event-detail">
    <a href={base} class="back-link">‚Üê Back to Events</a>

    <div class="glass-panel event-header">
      <h1 class="text-gradient">{title}</h1>
      <p class="event-description-text">{description}</p>

      <div class="meta-grid">
        <div class="meta-item">
          <span class="meta-icon">üóìÔ∏è</span>
          <div>
            <strong>Date</strong>
            <p>{formattedDate}</p>
          </div>
        </div>
        <div class="meta-item">
          <span class="meta-icon">üïí</span>
          <div>
            <strong>Time</strong>
            <p>{time}</p>
          </div>
        </div>
        <div class="meta-item">
          <span class="meta-icon">üìç</span>
          <div>
            <strong>Location</strong>
            <p>{location}</p>
          </div>
        </div>
        <div class="meta-item">
          <span class="meta-icon">üîó</span>
          <div>
            <strong>Info / RSVP</strong>
            <p>
              <a href={organizerLink} target="_blank" rel="noopener noreferrer"
                >Organizer Link</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="glass-panel content-section">
      <div class="prose" style="white-space: pre-wrap;">
        {body || "No additional details provided."}
      </div>
    </div>
  </article>
</Layout>

<style>
  .event-detail {
    max-width: 800px;
    margin: 0 auto;
    padding-top: 2rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .back-link:hover {
    color: var(--accent-primary);
    transform: translateX(-5px);
  }

  .event-header {
    margin-bottom: 2rem;
    border-top: 4px solid var(--accent-primary);
  }

  .event-header h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
  }

  .event-description-text {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .meta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .meta-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .meta-icon {
    font-size: 1.5rem;
    background: var(--bg-surface-hover);
    padding: 0.5rem;
    border-radius: 8px;
    border: var(--glass-border);
  }

  .meta-item strong {
    display: block;
    color: var(--text-secondary);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.25rem;
  }

  .meta-item p {
    color: var(--text-primary);
    margin: 0;
  }

  .content-section {
    padding: 3rem;
  }

  .prose {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(h2),
  .prose :global(h3) {
    margin-top: 2rem;
    color: var(--accent-secondary);
  }

  @media (max-width: 600px) {
    .content-section {
      padding: 1.5rem;
    }

    .meta-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

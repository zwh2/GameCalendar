---
import type { CollectionEntry } from "astro:content";

interface Props {
  event: CollectionEntry<"events">;
}

const { event } = Astro.props;
const { title, date, time, location, description } = event.data;

const formattedDate = date.toLocaleDateString("en-US", {
  weekday: "short",
  year: "numeric",
  month: "short",
  day: "numeric",
});

const base = import.meta.env.BASE_URL;
---

<article class="glass-panel event-card">
  <div class="event-date">
    <span class="month"
      >{
        date.toLocaleDateString("en-US", { month: "short" }).toUpperCase()
      }</span
    >
    <span class="day">{date.getDate()}</span>
  </div>

  <div class="event-details">
    <h3 class="event-title">
      <a href={`${base}/events/${event.slug}`}>{title}</a>
    </h3>
    <div class="event-meta">
      <span class="meta-item">üïí {time}</span>
      <span class="meta-item">üìç {location}</span>
      <span class="meta-item">üóìÔ∏è {formattedDate}</span>
    </div>
    <p class="event-description">{description}</p>
    <a href={`${base}/events/${event.slug}`} class="read-more">View Details ‚Üí</a
    >
  </div>
</article>

<style>
  .event-card {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--bg-surface-hover);
    border: var(--glass-border);
    border-radius: 12px;
    padding: 1rem;
    min-width: 80px;
    height: 80px;
  }

  .month {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--accent-primary);
    letter-spacing: 1px;
  }

  .day {
    font-size: 1.8rem;
    font-weight: 700;
    line-height: 1;
    color: var(--text-primary);
  }

  .event-details {
    flex: 1;
  }

  .event-title {
    margin-bottom: 0.5rem;
  }

  .event-title a {
    color: var(--text-primary);
  }

  .event-title a:hover {
    color: var(--accent-secondary);
    text-shadow: 0 0 10px rgba(139, 233, 253, 0.4);
  }

  .event-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .event-description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--accent-primary);
    display: inline-flex;
    align-items: center;
  }

  .read-more:hover {
    transform: translateX(4px);
    color: var(--accent-secondary);
  }

  @media (max-width: 600px) {
    .event-card {
      flex-direction: column;
    }

    .event-date {
      flex-direction: row;
      gap: 0.5rem;
      height: auto;
      justify-content: flex-start;
      padding: 0.5rem 1rem;
    }
    .month {
      font-size: 1rem;
    }
    .day {
      font-size: 1.2rem;
    }
  }
</style>
